<% include header %>

<h1>NIEUWS</h1>

<nav>
  <% for (var i = 0; i < categorieen.length; i++) { %>
    <a href="/categorieen/<%- i %>"><%- categorieen[i] %></a>
  <% } %>
</nav>


  <% var teller = 1; %>
  <% nieuws.forEach(function(item){ %>
    <section>
        <h2 class="nieuwstitel">
          <a href=/items/<%- item.id %>><%- item.titel %></a>
        </h2>
        <img src="/img/<%- item.afbeeldings %>" class="images" alt="<%- item.titel %>">
        <p class="datum"><%- item.datum %></p>

        <p class="samenvatting">
          <%- item.samenvatting %>
        </p>
    </section>
    <% teller++;}); %>

<% include footer %>
