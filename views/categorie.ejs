<% include header %>

<h1 class="goback"><a href="/">NIEUWS</a></h1>

<h2 class="itemsvoor">Nieuwsitems voor categorie <%- categorieen[id] %></h2>

  <% for (var i = 0; i < items.length; i++) { %>
    <% if (items[i].categorieen.indexOf(categorieen[id]) !== -1) { %>
      <section>
          <h2 class="nieuwstitel">
            <a href=/items/<%- items[i].id %>><%- items[i].titel %></a>
          </h2>
          <img src="/img/<%- items[i].afbeeldings %>" class="images" alt="<%- items[i].titel %>">
          <p class="datum"><%- items[i].datum %></p>

          <p class="samenvatting">
            <%- items[i].samenvatting %>
          </p>
      </section>
    <% } %>
  <% } %>

<% include footer %>
